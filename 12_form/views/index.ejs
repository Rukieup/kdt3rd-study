  <form action="/postForm" method="post" name="login22"> 
    <label for="name">이름</label>
    <input type="text" id="name" name="name" required>

    <fieldset> 
    <legend>성별</legend>      
    <input type="radio" name="gender" value="male" required>남자
    <input type="radio" name="gender" value="female" >여자
    </fieldset>

    <br>
    <fieldset>
      <legend>생년월일</legend>
      <select name="birthYear" id="year">
        <% for(let i = 1900; i <= 2022; i++) { %>
          <option value="<%= i %>"><%= i %></option>
        <% } %> 
      </select>
      <label for="year">년</label>

      <br>
      <select name="birthMonth" id="month">
        <% for(let i = 1; i <= 12; i++) { %>
          <option value="<%= i %>"><%= i %></option>
        <% } %> 
      </select>
      <label for="month">월</label>
      
      <br>
      <select name="birthDate" id="date">
        <% for(let i = 1; i <= 31; i++) { %>
          <option value="<%= i %>"><%= i %></option>
        <% } %> 
      </select>
      <label for="date">일</label>
    </fieldset>

    <br>
    <fieldset>
      <legend>관심사</legend> 
      <input type="checkbox" id="travel" name="hobby" value="travel">
      <label for="travel">여행</label>
      <input type="checkbox" id="fashion" name="hobby" value="fashion">
      <label for="fashion">패션</label>
      <input type="checkbox" id="food" name="hobby" value="food">
      <label for="food">음식</label>
    </fieldset>

    <br>
    <fieldset>
      <legend>기타</legend>
      <label for="color">좋아하는 색상</label>
      <input type="color" name="color" id="color">

      <br>
      <label for="number">좋아하는 숫자</label>
      <input type="number" name="number" id="number">
    </fieldset>

    <button type="get">회원가입</button>
  </form>

